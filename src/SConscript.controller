# vim: ft=python

modelDir = 'Controller'

sourceTargets = [ 'datamanager.cpp' ]

targets = []
for source in sourceTargets:
  targets.append(modelDir + '/' + source)

env = Environment(
                    CCFLAGS = '-O2 -std=c++0x -g',
                    LINKFLAGS = '-std=c++0x -lpthread -lboost_serialization -lpqxx'
                 )

env.Library('Controller',targets)
